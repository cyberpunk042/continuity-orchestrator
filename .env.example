# Continuity Orchestrator Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# CORE SETTINGS
# =============================================================================

# Mock mode (set to false for production)
ADAPTER_MOCK_MODE=false

# State and audit paths (usually left as defaults in Docker)
# STATE_FILE=/data/state/current.json
# AUDIT_DIR=/data/audit

# =============================================================================
# EMAIL ADAPTER (Resend)
# =============================================================================
# Get your API key from: https://resend.com/api-keys

RESEND_API_KEY=
RESEND_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# SMS ADAPTER (Twilio)
# =============================================================================
# Get credentials from: https://console.twilio.com

TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=+15551234567

# =============================================================================
# X (TWITTER) ADAPTER
# =============================================================================
# Create app at: https://developer.twitter.com/en/portal

X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_SECRET=

# =============================================================================
# REDDIT ADAPTER
# =============================================================================
# Create app at: https://www.reddit.com/prefs/apps

REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=

# =============================================================================
# GITHUB ADAPTER
# =============================================================================
# Create personal access token at: https://github.com/settings/tokens

GITHUB_TOKEN=
GITHUB_REPOSITORY=owner/repo

# =============================================================================
# PERSISTENCE API ADAPTER
# =============================================================================
# If using external persistence backend

PERSISTENCE_API_URL=
PERSISTENCE_API_KEY=
PERSISTENCE_API_TIMEOUT=30

# =============================================================================
# WEBHOOK ADAPTER
# =============================================================================
# Webhook URLs are configured in state.json, not here

WEBHOOK_TIMEOUT=30
